<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 상단 레이아웃: 뒤로가기 버튼과 문의하기 타이틀 -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"> <!-- 패딩 줄여서 위쪽 공간 조정 -->

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/fk_back"
            android:contentDescription="Back Button"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-8dp"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문의하기"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-3dp"/> <!-- 상단 여백 수정 -->
    </RelativeLayout>

    <!-- 타이틀 아래의 여백 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/> <!-- 여백 크기를 줄임 -->

    <!-- 문의 유형 텍스트 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문의 유형"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingBottom="8dp"/>

    <!-- 카테고리 선택 스피너 -->
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>

    <!-- 카테고리 밑줄 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C8C8C8"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"/>

    <!-- 문의 내용 텍스트 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문의 내용"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingBottom="8dp"/>

    <!-- 내용 입력 EditText -->
    <EditText
        android:id="@+id/inquiry_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#EBEAEA"
        android:hint="내용을 입력하세요"
        android:textColorHint="#C8C8C8"
        android:textSize="14sp"
        android:gravity="top|start"
        android:padding="8dp"/>

    <!-- 여백 추가 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- 작성하기 버튼 -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="작성하기"
        android:textColor="@android:color/white"
        android:background="#65B120"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_gravity="center"/>

</LinearLayout>
