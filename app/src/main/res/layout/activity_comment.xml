<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- 상단 바 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- 뒤로가기 버튼 -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/fk_back"
            android:contentDescription="@string/back_button_desc"
            android:layout_alignParentStart="true" />

        <!-- 메뉴 아이콘 -->
        <ImageView
            android:id="@+id/fk_vert_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/fk_vert"
            android:contentDescription="글 옵션"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp" />
    </RelativeLayout>

    <!-- 게시글 제목 -->
    <TextView
        android:id="@+id/postTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제목 없음"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <!-- 작성자 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- 작성자 아이콘 -->
        <ImageView
            android:id="@+id/postAuthorIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/author_icon_desc"
            android:src="@drawable/fk_mmm"
            android:scaleType="centerCrop"
            android:background="#ffffff" />

        <!-- 작성자 닉네임 -->
        <TextView
            android:id="@+id/postAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="익명 사용자"
            android:textSize="16sp"
            android:textColor="#757575" />
    </LinearLayout>

    <!-- 게시글 이미지 -->
    <ImageView
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/post_image_desc" />

    <!-- 게시글 내용 -->
    <TextView
        android:id="@+id/postContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용 없음"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- 댓글 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"
        android:overScrollMode="always" />

    <!-- 댓글이 없습니다 텍스트 -->
    <TextView
        android:id="@+id/noCommentsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="댓글이 없습니다."
        android:textSize="16sp"
        android:textColor="#757575"
        android:visibility="gone"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginBottom="8dp" />

    <!-- 댓글 입력 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@color/light_gray">

        <!-- 댓글 입력창 -->
        <EditText
            android:id="@+id/comment_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="댓글을 입력하세요"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:layout_marginEnd="8dp"
            android:inputType="text"
            android:imeOptions="actionSend" />

        <!-- 전송 버튼 -->
        <ImageView
            android:id="@+id/send_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/fk_send"
            android:contentDescription="@string/send_button_desc"
            android:padding="8dp" />
    </LinearLayout>
</LinearLayout>