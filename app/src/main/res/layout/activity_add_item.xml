<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 반투명 배경 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" /> <!-- 반투명 블랙 배경 -->

    <!-- 중앙에 위치할 내용물 -->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/fk_placeholder"
        android:padding="16dp">

        <!-- 상품 이미지와 상품명 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <!-- 상품 이미지 -->
            <ImageView
                android:id="@+id/item_image"
                android:layout_width="80dp"
                android:layout_marginLeft="-3dp"
                android:layout_marginTop="10dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:contentDescription="상품 이미지"
                android:alpha="0.24"
                android:background="@drawable/fk_ppp"/>

            <!-- 상품명 (수정 가능) -->
            <EditText
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="상품명을 입력하세요"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:maxLength="100" />
        </LinearLayout>

        <!-- 저장 방법 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="보관 방법"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/storage_method"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.04"
                android:entries="@array/storage_methods"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/storage_method_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/fk_arrow_drop_down_24"
                android:contentDescription="저장 방법 아이콘" />
        </LinearLayout>

        <!-- 수량 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="수량"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/item_quantity_minus"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"
                android:alpha="0.3"
                android:contentDescription="수량 감소"
                android:src="@drawable/fk_remove" />

            <EditText
                android:id="@+id/item_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                android:hint="0"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="#000000"
                android:inputType="number" />

            <ImageView
                android:id="@+id/item_quantity_plus"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:src="@drawable/fk_control"
                android:contentDescription="수량 증가"
                android:alpha="0.3"/>
        </LinearLayout>

        <!-- 등록 날짜 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="등록 날짜"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/item_reg_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="등록 날짜"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:textColor="#000000"
                android:inputType="date"
                android:maxLength="8" />

            <ImageView
                android:id="@+id/item_reg_date_icon"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/fk_calendar_month"
                android:contentDescription="등록 날짜 아이콘"
                android:alpha="0.3"/>
        </LinearLayout>

        <!-- 유통 기한 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="유통기한"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/item_exp_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="유통기한"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:textColor="#000000"
                android:inputType="date"
                android:maxLength="8" />

            <ImageView
                android:id="@+id/item_exp_date_icon"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/fk_calendar_month"
                android:contentDescription="유통 기한 아이콘"
                android:alpha="0.3"/>
        </LinearLayout>

        <!-- 메모 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/fk_memo">

            <EditText
                android:id="@+id/item_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="메모"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:textColor="#000000"
                android:inputType="textCapSentences"
                android:maxLength="500" />
        </LinearLayout>

        <!-- 버튼 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- 취소 버튼 -->
            <Button
                android:id="@+id/cancel_button"
                style="@style/CustomButtonStyle"
                android:text="취소하기"
                android:background="@color/cancel_button_color" />

            <!-- 저장 버튼 -->
            <Button
                android:id="@+id/save_button"
                style="@style/CustomButtonStyle"
                android:text="저장하기"
                android:layout_marginStart="8dp"
                android:background="@color/save_button_color" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>