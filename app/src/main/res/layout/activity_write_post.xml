<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 상단 바 (뒤로 가기 버튼 및 제목) -->
        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/fk_back"
                android:contentDescription="Back Button"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="글쓰기"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <!-- 제목 입력 EditText -->
        <EditText
            android:id="@+id/title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="제목을 입력하세요"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"/>

        <!-- 내용 입력 EditText -->
        <EditText
            android:id="@+id/content_input"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#EBEAEA"
            android:hint="내용을 입력하세요"
            android:textSize="14sp"
            android:gravity="top|start"
            android:padding="8dp"/>

        <!-- 사진 추가를 위한 photo_icon ImageView와 텍스트 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/photo_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/fk_image"
                android:tint="#BBBBBB"
                android:contentDescription="사진 추가 아이콘"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 추가"
                android:textColor="#BBBBBB"
                android:textSize="16sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- 선택한 이미지를 표시할 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/image_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="8dp"
            android:clipToPadding="false"
            android:scrollbars="horizontal"/>

        <!-- 작성하기 버튼 위에 공백 추가 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- 작성하기 버튼 -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="작성하기"
            android:textColor="@android:color/white"
            android:background="#65B120"
            android:padding="16dp"
            android:textSize="16sp"/>
    </LinearLayout>
</FrameLayout>
