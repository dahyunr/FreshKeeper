<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 선택된 탭 -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/tab_selected" /> <!-- 선택된 탭 배경색 -->
            <stroke
                android:color="@color/tab_active"
                android:width="1dp" /> <!-- 선택된 탭 테두리 두께 -->
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- 선택되지 않은 탭 -->
    <item android:state_selected="false">
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- 선택되지 않은 탭 배경 투명 -->
            <stroke
                android:color="@color/tab_active"
                android:width="1dp" /> <!-- 선택되지 않은 탭 테두리 얇게 -->
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>
