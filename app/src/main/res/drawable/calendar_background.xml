<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 날짜가 선택된 상태일 때 -->
    <item
        android:state_checked="true"
        android:drawable="@drawable/calendar_select_background"/>

    <!-- 날짜가 선택되지 않았을 때 -->
    <item
        android:state_pressed="true"
        android:drawable="@drawable/calendar_not_select_background"/>

    <!-- 기본 상태 (선택되지 않음) -->
    <item android:drawable="@drawable/calendar_not_select_background"/>
</selector>
